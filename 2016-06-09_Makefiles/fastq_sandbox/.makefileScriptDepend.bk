BWA = /usr/local/bin/bwa
SAMTOOLS = /usr/local/bin/samtools
REF = /usr/local/ref/e_coli.fa
BWA_SH = /Users/pz/Dropbox/make/fastq_sandbox/bwa.sh

FASTQFILES = $(wildcard *.fastq.gz)

default: $(FASTQFILES:.fastq.gz=.bam)

%.sai: %.fastq.gz $(BWA_SH)
	 bash $(word 2,$^) $(REF) $< $@

%.sam: %.sai %.fastq.gz
	$(BWA) samse $(REF) $^ > $@

%.bam: %.sam
	$(SAMTOOLS) view -bS $< > $@
